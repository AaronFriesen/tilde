#!/bin/sh
# Removes multiple submissions for each student, leaving only the
# most recent submission, which is renamed so that it doesn't have
# T-square's annoying "+ number" thing at the end. Also unzips any
# zip files that were submitted and, if the students zipped an entire
# folder, removes the folder and puts its contents into the Submission
# attachments directory.

for dir in *
do
   for file in "$dir/Submission"*/*
   do
        if [ -f "$file" ]
        then
            mv "$file" "$dir"
        fi
    done
    rmdir "$dir/Submiss"*
done
